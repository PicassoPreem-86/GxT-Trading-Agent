# GxT Trading Agent Configuration

# Mode: "simulation" (default) or "live"
AGENT_MODE=simulation

# Symbols to track (comma-separated)
SYMBOLS=SPY,QQQ,ES,NQ

# Analysis interval in minutes
ANALYSIS_INTERVAL_MINUTES=5

# Risk management
MAX_DAILY_LOSS_PERCENT=2
MAX_POSITION_SIZE_PERCENT=5
MIN_REWARD_RISK_RATIO=2

# Starting capital for simulation
SIM_STARTING_CAPITAL=100000

# Score threshold (0-100) to trigger a trade
SCORE_THRESHOLD=65

# API server port
API_PORT=3377

